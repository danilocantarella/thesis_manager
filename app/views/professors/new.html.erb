<div id="signupbox" style="margin-top:50px;" class="mainbox col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2">                    
	
	<% flash.each do |key, value| %>
    	<div style ="margin-top: -40px" class="alert alert-<%= key %>"><%= value %></div>
	<% end %>

	<div class="panel panel-info" >
		<div class="panel-heading" style="color:#FFFFFF; background-color: #337ab7; border-color: #04779b;">
			<div class="panel-title">Registrazione nuovo Professore</div>
		</div>     

		<div style="padding-top:30px" class="panel-body" >

			<div style="display:none" id="login-alert" class="alert alert-danger col-sm-12"></div>

				<%= form_for(:professor, url: professors_path) do |f| %>

				<div style="margin-bottom: 25px" class="input-group">
					<span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
					<%= f.text_field :nome, class: 'form-control', :placeholder => "nome", :required => true %>                                        
				</div>

				<div style="margin-bottom: 25px" class="input-group">
					<span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
					<%= f.text_field :cognome, class: 'form-control', :placeholder => "cognome", :required => true %>                                        
				</div>

				<div style="margin-bottom: 25px" class="input-group">
					<span class="input-group-addon"><i class="glyphicon glyphicon-home"></i></span>
					<%= f.text_field :ufficio, class: 'form-control', :placeholder => "ufficio", :required => true %>                                        
				</div>

				<div style="margin-bottom: 25px" class="input-group">
			          <span class="input-group-addon"><i class="glyphicon glyphicon-earphone"></i></span>
			          <%= f.text_field :telefono, class: 'form-control', :placeholder => "telefono", :required => true %>                                        
			       </div>

				<div style="margin-bottom: 25px" class="input-group">
					<span class="input-group-addon"><i class="glyphicon glyphicon-envelope"></i></span>
					<%= f.email_field :email, class: 'form-control', :placeholder => "email", :required => true %>                                        
				</div>

				<div style="margin-bottom: 25px" class="input-group">
					<span class="input-group-addon"><i class="glyphicon glyphicon-lock"></i></span>
					<%= f.password_field :password, class: 'form-control', :placeholder => "password", :required => true %>
				</div>

				<div style="margin-bottom: 25px" class="input-group">
					<span class="input-group-addon"><i class="glyphicon glyphicon-ok"></i></span>
					<%= f.password_field :password_confirmation, class: 'form-control', :placeholder => "password confirmation", :required => true %>
				</div>


				<div style="margin-top:10px" class="form-group">
					<!-- Button -->

					<div class="col-sm-12 controls">
						<%= f.submit "Registrati", class: "btn btn-primary" %>
    			<% end %>

					</div>
				</div>


			
			   



		</div>                     
	</div>  
</div>


